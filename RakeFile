require 'rake'

desc "Creates necessary symlinks"
task :install do

  # Check if the home dir is correct
  puts "Home directory: " + `echo $HOME`
  print "correct? [y/n] "
  if $stdin.gets.chomp != 'y'
    puts "aborting ..."
    exit
  end

  # Check if this is a test run
  print "test run? [y/n] "
  is_test_run = $stdin.gets.chomp != 'n' ? true : false ;

  # Proccess files
  Dir.chdir('dot/')
  Dir['*'].each do |file|
    new_file_path = File.join(ENV['HOME'], ".#{file}")

    if File.exist?(new_file_path)
      if File.identical? file, new_file_path
        puts "identical ~/.#{file}"
      else
        print "overwrite ~/.#{file}? [yes no quit] "
        case $stdin.gets.chomp
        when 'y'
          replace_file(file, is_test_run)
        when 'q'
          exit
        else
          puts "skipping ~/.#{file}"
        end
      end
    else
      link_file(file, is_test_run)
    end
  end
end

desc "Removes created symlinks"
task :uninstall do 
  # TODO
end

# Replace file if this is not a test run
def replace_file(file, is_test_run)
  puts "replacing ~/.#{file}"
  if !is_test_run
    system %Q{rm -rf "File.join(ENV['HOME'], ".#{file}")"}
  end
  link_file(file)
end

# Link file if this is not a test run
def link_file(file, is_test_run)
  puts "linking ~/.#{file}"
  if !is_test_run
    system %Q{ln -s "$PWD/#{file}" "$HOME/.#{file}"}
  end
end
